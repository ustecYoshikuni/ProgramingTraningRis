<UserControl x:Class="ProgramingTraningRis.Main.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center">ログイン画面</TextBlock>
                <TextBlock HorizontalAlignment="Center">ユーザID</TextBlock>
                <TextBox Width="300"></TextBox>
            <TextBlock HorizontalAlignment="Center">パスワード</TextBlock>
                <TextBox Width="300"></TextBox>
            <Button Width="300" Height="30"
                    Command="{Binding LoginCommand}">ログイン</Button>
        </StackPanel>
    </Grid>
</UserControl>